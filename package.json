{
  "name": "twitch-downloader",
  "version": "0.1",
  "description": "Free tool to download Twitch content with GUI",
  "author": "Sergio Almela",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "rimraf": "./node_modules/rimraf/bin.js",
    "start": "npm run build && electron  --no-sandbox .",
    "start:terminal": "npm run build && node dist/src/terminal/main.js",
    "test": "npm run build && vitest",
    "coverage": "npm run build && vitest run --coverage",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "ts-standard": "^11.0.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "i18n": "^0.15.0",
    "m3u8-parser": "^6.0.0",
    "m3u8stream": "^0.8.6",
    "mkdirp": "^1.0.4",
    "prompts": "^2.4.2"
  }
}
